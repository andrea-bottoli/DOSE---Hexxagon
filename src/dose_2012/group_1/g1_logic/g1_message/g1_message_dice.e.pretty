note
	description: "Summary description for {G1_MESSAGE_DICE}."
	author: ""
	date: "$Date$"
	revision: "$Revision$"

class
	G1_MESSAGE_DICE

inherit

	G1_MESSAGE

create
	make, make_dice

feature -- Initialization

	make
			-- Initialize the message whit default value
		do
			dice := 0
		end

	make_dice (a_dice: INTEGER)
		require
			valid_dice: a_dice > 0 and a_dice < 7
		do
			dice := a_dice
		end

feature --Measurent

	dice: INTEGER
			-- Value of the dice

end
